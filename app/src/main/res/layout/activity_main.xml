<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#09101E">

    <!-- Основной контент -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="5dp"
        android:paddingBottom="24dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#111827"
            app:title="SpyTool"
            app:titleTextColor="@android:color/white"
            app:navigationIcon="@drawable/ic_menu" />

        <!-- Заголовок -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Шифратор • Стеганограф"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#F9FAFB"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="32dp"/>

        <!-- Кнопки -->
        <Button
            android:id="@+id/btnEncodeImage"
            android:layout_width="350dp"
            android:layout_height="54dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:text="Скрыть сообщение в изображении"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_button_selector"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnDecodeImage"
            android:layout_width="350dp"
            android:layout_height="54dp"
            android:layout_gravity="center_horizontal"
            android:text="Извлечь сообщение из изображения"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_button_secondary"
            android:layout_marginBottom="16dp"/>



        <!-- Информация -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="190dp"
            android:text="Информация о LSB кодировании"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#E5E7EB"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="• 1 пиксель = 3 бита данных\n• 1000×1000 ≈ 375 КБ текста\n• Сообщение шифруется XOR перед скрытием"
            android:textSize="14sp"
            android:textColor="#9CA3AF"
            android:lineSpacingExtra="4dp"/>

    </LinearLayout>


    <!-- Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#020617"
        app:headerLayout="@layout/nav_header"
        app:itemIconTint="#E5E7EB"
        app:itemTextColor="#E5E7EB"
        app:menu="@menu/drawer_menu"/>

</androidx.drawerlayout.widget.DrawerLayout>
